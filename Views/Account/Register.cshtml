@model Dream_Bridge.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="bg-gray-100 flex items-center justify-center p-10">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
        <h2 class="text-2xl font-bold mb-6 text-center">Register</h2>
        <form asp-action="Register" method="post">
            <!-- Name -->
            <div class="mb-4">
                <label for="FullName" class="block text-sm font-medium text-gray-700" asp-for="FullName"></label>
                <input type="text" id="FullName" name="FullName" placeholder="Enter your full name" asp-for="FullName" required
                    class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:bg-gray-200 focus:border-gray-200 sm:text-sm">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <!-- Email -->
            <div class="mb-4">
                <label for="Email" class="block text-sm font-medium text-gray-700" asp-for="Email"></label>
                <input type="email" id="Email" name="Email" placeholder="Enter your email" required
                    asp-for="Email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:bg-gray-200 focus:border-gray-200 sm:text-sm">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Phone -->
            <div class="mb-4">
                <label for="PhoneNumber" class="block text-sm font-medium text-gray-700" asp-for="PhoneNumber"></label>
                <input type="tel" id="PhoneNumber" name="PhoneNumber" placeholder="Enter your phone number" required
                    asp-for="PhoneNumber" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:bg-gray-200 focus:border-gray-200 sm:text-sm">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <!-- Address -->
            <div class="mb-4">
                <label for="Address" class="block text-sm font-medium text-gray-700" asp-for="Address"></label>
                <input type="text" id="Address" name="Address" placeholder="Enter your address" required
                    asp-for="Address" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:bg-gray-200 focus:border-gray-200 sm:text-sm">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="mb-4">
                <label for="Password" class="block text-sm font-medium text-gray-700" asp-for="Password"></label>
                <input type="password" id="Password" name="Password" placeholder="Enter your password" required
                    asp-for="Password" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:bg-gray-200 focus:border-gray-200 sm:text-sm">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password -->
<div class="mb-6">
    <label for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
    <input type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm your password"
        required
        class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:bg-gray-200 focus:border-gray-200 sm:text-sm">
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span> <!-- Hiển thị lỗi nếu có -->
</div>

            <button type="submit"
                class="w-full py-2 px-4 bg-black text-white font-bold rounded-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500">
                Register
            </button>
        </form>
        <div class="mt-4 text-center justify-center gap-1 flex ">
            <p class="text-sm text-gray-600">Already have an account?</p>
            <a href="/login" class="text-sm  text-black font-bold hover:text-indigo-800">Login</a>
        </div>
        <div class="mt-4 text-center justify-center gap-1">
            <p class="text-sm text-gray-600">Forgot your password?</p>
            <a href="/forgotpassword" class="text-sm text-black font-bold hover:text-indigo-800">Reset Password</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
