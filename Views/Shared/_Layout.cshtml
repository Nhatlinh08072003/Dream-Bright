<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] StudyAbroadConsulting</title>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>

<body>
    @await Html.PartialAsync("_NotificationPartial")
    <partial name="../../Partials/Header.cshtml" />
    
    <div class="container1">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    
    <partial name="../../Partials/Footer.cshtml" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/notification.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)

    @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.HasClaim("CanAccessChat", "True")))
    {
        <li><a href="@Url.Action("QLChat", "Admin")">Quản lý Chat</a></li>
    }
</body>

</html>
