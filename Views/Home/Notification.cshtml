        </a>
      </li>
      <!-- Thêm các mục thông báo khác nếu có -->
    </ul>
  </div>
</div>

<!-- Popup chi tiết thông báo -->
<div id="notificationDetailPopup"
  class="hidden fixed inset-0 bg-gray-900 bg-opacity-50 flex items-center justify-center">
  <div class="bg-white rounded-lg shadow-lg w-11/12 md:w-2/3 lg:w-1/2 p-6">
    <h2 id="notificationTitle" class="text-xl font-bold text-gray-800 mb-2"></h2>
    <p id="notificationContent" class="text-gray-700"></p>
    <button onclick="closeNotificationDetail()"
      class="mt-4 px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 focus:outline-none">Đóng</button>
  </div>
</div>

<script>
  function showNotificationDetail(title, content) {
    document.getElementById("notificationTitle").innerText = title;
    document.getElementById("notificationContent").innerText = content;
    document.getElementById("notificationDetailPopup").classList.remove("hidden");
  }

  function closeNotificationDetail() {
    document.getElementById("notificationDetailPopup").classList.add("hidden");
  }

</script>
