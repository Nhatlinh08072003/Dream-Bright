@model IEnumerable<Dream_Bridge.Models.Main.News>

<div class="mx-4 md:mx-16 lg:mx-32">
    <h1 class="mb-4 mt-10 border-b-2 border-black text-2xl font-bold">TIN TỨC</h1>
    <div id="tin-tuc-uc">
        <div class="container mx-auto p-4">
            <div id="news" class="-mx-2 flex flex-wrap">
                @foreach (var news in Model)
                {
                    <div class="new mb-4 w-full px-2 md:w-1/2 ">
                        <div class="flex items-center rounded-lg bg-white p-6 shadow-md"> <!-- Tăng padding -->
                            <img src="@news.NewsImage" alt="Logo trường"
                                class="h-32 w-32 object-cover rounded-md flex-shrink-0" />
                            <div class="ml-4">
                                <a href="@Url.Action("Chitiet", "DichVu", new { id = news.IdNews })">
                                    <h2 class="mb-2 text-left text-xl font-bold">
                                        <span>@news.TitleNews</span>
                                    </h2> <br>
                                    <p>@news.NewsDescription</p>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="mt-4 text-center">
                <button id="view-more-btn" class="rounded bg-blue-500 px-4 py-2 text-white">Xem thêm</button>
            </div>
        </div>
    </div>
</div>

<script>
    // Lấy nút và các thẻ cần ẩn (nếu bạn vẫn muốn có nút "Xem thêm")
    const viewMoreBtn = document.getElementById('view-more-btn');

    // Nếu bạn không cần ẩn bất kỳ thẻ nào, bạn có thể bỏ qua phần này
    viewMoreBtn.style.display = 'none'; // Ẩn nút "Xem thêm" vì không có thẻ nào bị ẩn
</script>
