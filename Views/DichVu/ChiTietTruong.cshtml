@model Dream_Bridge.Models.Main.School
@using Dream_Bridge.Helpers
<div class="flex px-10">
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold">@Model.TitleSchool</h1>
        <img src="@Model.ImageSchool" alt="@Model.TitleSchool" class="mb-4 w-full h-auto" />

        <div class="mt-4">
            <p><strong>Quốc gia:</strong> @Model.Nation</p>
            <p><strong>Tỉnh bang/Thành phố:</strong> @Model.StateCity</p>
            <p><strong>Bậc học:</strong> @Model.Level</p>
            <div><strong>Học phí trung bình:</strong> @Model.AverageTuition.ToString("C")</div>
        </div>
        @* <p>@Html.Raw(Model.DetailedDescription)</p> *@
        <div>
            @Html.Raw(HtmlHelpers.FormatNewsContent(Model.DetailedDescription).ToString())
        </div>


        <div class="mt-4 text-center">
            <button class="rounded bg-blue-500 px-4 py-2 text-white w-2/5" id="consultButton">
                <span class="font-bold text-xl">Tôi muốn tư vấn</span>
            </button>
        </div>
    </div>

    <div class="w-full md:w-3/12 mt-14">
        <div class="border border-gray-300 p-4">
            <ul class="space-y-2">
                <li><a href="/my" class="text-blue-600">Du Học Mỹ</a></li>
                <li><a href="/singapore" class="text-blue-600">Du Học Singapore</a></li>
                <li><a href="/uc" class="text-blue-600">Du Học Úc</a></li>
                <li><a href="/thuysy" class="text-blue-600">Du Học Thụy Sĩ</a></li>
                <li><a href="/dichvu" class="font-bold text-blue-600">Dịch Vụ Visa</a></li>
                <ul class="space-y-2 pl-4">
                    <li><a href="/my" class="text-blue-600">Dịch vụ visa Mỹ</a></li>
                    <li><a href="/singapore" class="text-blue-600">Dịch vụ visa Singapore</a></li>
                    <li><a href="/uc" class="text-blue-600">Dịch vụ visa Úc</a></li>
                    <li><a href="/thuysy" class="text-blue-600">Dịch vụ visa Thụy Sĩ</a></li>
                </ul>
            </ul>
        </div>
    </div>
</div>
<script>
    document.getElementById('consultButton').addEventListener('click', function () {
        // Hiện thị nút đăng ký tư vấn khi nhấn vào nút "Tôi muốn tư vấn"
        document.getElementById('openPopup').style.display = 'flex'; // Hoặc 'block' nếu bạn muốn kiểu hiển thị khác
    });
</script>
