@using Dream_Bridge.Models.Main
@using Dream_Bridge.Helpers

<div class="flex flex-col md:flex-row px-10">
    <div class="mx-4 mb-3 mt-6 w-full md:w-4/6">
        <div class="container mx-auto mt-8">
            <h1 class="text-3xl font-bold mb-4">@Model.TitleNews</h1>
            <img src="@Model.NewsImage" alt="News Image" class="mb-4 w-full h-auto rounded-lg shadow-md" />
            <div class="news-description p-6 bg-gray-100 rounded-lg shadow-md">
                @Html.Raw(HtmlHelpers.FormatNewsContent(Model.NewsContent).ToString())
            </div>
        </div>
        <div class="mt-4 text-center">
            <button class="rounded bg-blue-500 px-4 py-2 text-white w-2/5">
                <span class="font-bold text-xl">Tôi muốn tư vấn</span>
            </button>
            <a href="/DichVu/DemoDecoratorPattern"
                class="rounded bg-green-500 px-4 py-2 text-white w-2/5 inline-block mt-4">
                <span class="font-bold text-xl">Demo Decorator Pattern</span>
            </a>
        </div>
    </div>
    <div class="w-full md:w-3/12 mt-14">
        <div class="border border-gray-300 p-4 rounded-lg shadow-md">
            <ul class="space-y-2">
                <li><a href="/my" class="text-blue-600">Du Học Mỹ</a></li>
                <li><a href="/singapore" class="text-blue-600">Du Học Singapore</a></li>
                <li><a href="/uc" class="text-blue-600">Du Học Úc</a></li>
                <li><a href="/thuysy" class="text-blue-600">Du Học Thụy Sĩ</a></li>
                <li><a href="/dichvu" class="font-bold text-blue-600">Dịch Vụ Visa</a></li>
                <ul class="space-y-2 pl-4">
                    <li><a href="/my" class="text-blue-600">Dịch vụ visa Mỹ</a></li>
                    <li><a href="/singapore" class="text-blue-600">Dịch vụ visa Singapore</a></li>
                    <li><a href="/uc" class="text-blue-600">Dịch vụ visa Úc</a></li>
                    <li><a href="/thuysy" class="text-blue-600">Dịch vụ visa Thụy Sĩ</a></li>
                </ul>
            </ul>
        </div>
    </div>
</div>
