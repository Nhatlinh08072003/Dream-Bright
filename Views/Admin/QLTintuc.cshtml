@model NewsViewModel
@{
    Layout = "_AdminLayout";
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản lý tin tức</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .active {
            background-color: rgba(255, 255, 255, 0.2);
            transition: background-color 0.3s ease;
        }

        a {
            transition: background-color 0.3s ease;
            width: 100%;
        }

        .container.mx-auto.flex.items-center.justify-end.gap-3.p-3 {
            display: none;
        }

        .flex.gap-7.text-lg.font-medium.pr-5.pb-7 {
            display: none;
        }

        .w-36 {
            display: none;
        }

        .flex.items-start.justify-center.gap-20.bg-gray-900 {
            display: none;
        }
    </style>
</head>

<body class="items-center justify-center">

    <div class="flex w-[100%]">
        <div
            class="group relative flex h-[900px] w-[50px] flex-col items-start bg-green-500 transition-all duration-500 ease-in-out hover:w-[200px]">
            <a href="/Admin"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">home</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">Tổng
                    Quan</span>
            </a>
            <a href="/qltruong"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">school</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">QL
                    Trường</span>
            </a>
            <a href="/qltuvan"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">help_outline</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">QL
                    Tư vấn</span>
            </a>
            <a href="/qlduhoc"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">public</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">Danh
                    mục du học</span>
            </a>
            <a href="/qltintuc"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">announcement</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">QL
                    Tin tức</span>
            </a>
            <a href="/qltaikhoan"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">account_circle</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">QL
                    Tài khoản</span>
            </a>
            <a href="/qlchat"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">chat</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">QL
                    Chat</span>
            </a>
        </div>

        <div class="w-[100%] h-[900px] mx-auto w-[calc(100%-200px)]">
            <h1 class="w-[98%] font-bold text-center text-2xl mt-[2%] text-shadow">Quản lý tin tức</h1>
            <div
                class="w-[5%] mt-[1.5%] h-[4.5%] mr-8 ml-auto mb-[1.5%] shadow-box rounded-lg bg-green-500 text-center">
                <div id="addIcon" class="cursor-pointer flex justify-center items-center h-full">
                    <i class="fas fa-plus mt-2"></i>
                </div>
            </div>
            <div class="mx-auto grid grid-cols-2 mt-[1%] gap-4 w-[100%] h-[18%]" id="newsGrid">
                @foreach (var item in Model.NewsList)
                {
                    <div class="w-[95%] h-[100%] border border-black flex items-center justify-between p-5 news-item"
                        data-id="@item.IdNews">
                        <div class="w-[95%] h-[85%] flex">
                            <img class="w-[50%] h-[100%]" src="@item.NewsImage" alt="News Image" />
                            <div class="ml-2 h-[100%] w-[100%] text-[14px] flex flex-col justify-between">
                                <h1 class="font-bold flex">Tiêu đề:
                                    <p class="news-title pl-1 font-bold text-blue-700 font-normal">@item.TitleNews</p>
                                </h1>
                                <h1 class="font-bold flex">Mô tả:
                                    <p class="news-description pl-1 font-bold text-blue-700 font-normal">
                                        @item.NewsDescription</p>
                                </h1>
                                <h1 class="font-bold flex">Nội dung:
                                    <p class="news-NewsContent pl-1 font-bold text-blue-700 font-normal">@item.NewsContent
                                    </p>
                                </h1>
                                <h1 class="font-bold flex">Ngày tạo:
                                    <p class="news-NewsContent pl-1 font-bold text-blue-700 font-normal">
                                        @DateTime.Now.ToString("dd/MM/yyyy")

                                    </p>
                                </h1>
                            </div>
                        </div>
                        <div class="flex flex-col items-center">
                            <span class="cursor-pointer editIcon">
                                <i class="fas fa-edit" style="font-size: 20px;"></i> <!-- Icon sửa -->
                            </span>
                            <form asp-action="DeleteNews" method="post" class="delete-form mt-2" style="display:inline;">
                                <input type="hidden" name="id" value="@item.IdNews" />
                                <button type="button" class="cursor-pointer deleteIcon" onclick="confirmDelete(this)">
                                    <i class="fas fa-trash" style="font-size: 20px;"></i> <!-- Icon xoá -->
                                </button>
                            </form>
                        </div>
                    </div>
                }
            </div>

            <!-- Div overlay, ban đầu ẩn -->
            <div class="overlay fixed inset-0 bg-gray-900 bg-opacity-70 flex justify-center items-center hidden"
                id="overlay">
                <div class="w-[35%] h-[90%] modal bg-white p-10 rounded-lg shadow-lg text-center">
                    <div class="w-[100%] h-[100%] border border-black flex items-center justify-center">

                        <form asp-action="QLTinTuc" method="post" enctype="multipart/form-data" class="rounded-lg">
                            <div class="flex w-[100%] p-2 m-auto">
                                <label>Hình ảnh: </label>
                                <input type="file" asp-for="ImageFile" class="ml-2" />
                                <span asp-validation-for="ImageFile"></span>
                            </div>
                            @* class=" mt-1 block border border-gray-300 rounded-md shadow-sm
                            focus:border-blue-500 focus:ring focus:ring-blue-200" *@
                            <div class="flex w-[90%] p-2 m-auto">
                                <label class="w-[28%]">Tiêu đề: </label>
                                <input asp-for=" TitleNews" class="w-[70%] p-2 border border-black rounded-lg">
                            </div>
                            <div class="flex w-[90%] p-2 m-auto">
                                <label class="w-[28%]">Miêu tả: </label>
                                <input asp-for="NewsDescription"
                                    class="w-[70%] p-2 border border-black rounded-lg"></input>
                            </div>
                            <div class="flex w-[90%] p-2 m-auto">
                                <label class="w-[28%]">Nội dung: </label>
                                <input asp-for=" NewsContent" class="w-[70%] p-2 border border-black rounded-lg" />
                            </div>
                            <button id="closeModal" type="button"
                                class="w-[30%] p-2 bg-red-500 rounded-lg">Đóng</button>
                            <button type="submit" class="w-[30%] p-2 bg-green-500 rounded-lg">Thêm trường</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="UpdateForm fixed inset-0 bg-gray-900 bg-opacity-70 flex justify-center items-center hidden"
                id="UpdateForm">
                <div class="w-[35%] h-[90%] modal bg-white p-10 rounded-lg shadow-lg text-center">
                    <div class="w-[100%] h-[100%] border border-black flex items-center justify-center">
                        <form asp-action="UpdateNews" method="post" enctype="multipart/form-data" class="rounded-lg">
                            <input type="hidden" name="IdNews" asp-for="IdNews" />
                            <div class="flex w-[100%] p-2 m-auto">
                                <label>Hình ảnh: </label>
                                <input type="file" asp-for="ImageFile" class="ml-2" />
                                <span asp-validation-for="ImageFile"></span>
                            </div>
                            <div class="flex w-[90%] p-2 m-auto">
                                <label class="w-[28%]">Tiêu đề: </label>
                                <input asp-for="TitleNews" class="w-[70%] p-2 border border-black rounded-lg">
                            </div>
                            <div class="flex w-[90%] p-2 m-auto">
                                <label class="w-[28%]">Mô tả: </label>
                                <input asp-for="NewsDescription"
                                    class="w-[70%] p-2 border border-black rounded-lg"></input>
                            </div>
                            <div class="flex w-[90%] p-2 m-auto">
                                <label class="w-[28%]">Nội dung: </label>
                                <input asp-for="NewsContent" class="w-[70%] p-2 border border-black rounded-lg" />
                            </div>
                            <button id="closeModal" type="button"
                                class="w-[30%] p-2 bg-red-500 rounded-lg">Đóng</button>
                            <button type="submit" class="w-[30%] p-2 bg-green-500 rounded-lg">Cập nhật tin tức</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const overlay = document.getElementById('overlay'),
                modal = document.querySelector('.modal'),
                newsDivs = document.querySelectorAll('#newsGrid > div'),
                closeModal = () => overlay.style.display = 'none';

            document.querySelectorAll('#addIcon').forEach(icon => {
                icon.addEventListener('click', () => {
                    // Clear the form fields for adding a new school
                    document.querySelector('form').reset();
                    overlay.style.display = 'flex';
                });
            });
            // Event listener for edit buttons
            document.querySelectorAll('.editIcon').forEach(icon => {
                icon.addEventListener('click', function () {
                    const newsDiv = this.closest('[data-id]');
                    const newsId = newsDiv.getAttribute('data-id');
                    const title = newsDiv.querySelector('.news-title').textContent.trim();
                    const description = newsDiv.querySelector('.news-description').textContent.trim();
                    const NewsContent = newsDiv.querySelector('.news-NewsContent').textContent.trim();

                    // Populate the form fields with the school's data
                    document.querySelector('input[name="Id"]').value = newsId;
                    document.querySelector('input[name="TitleNews"]').value = title;
                    document.querySelector('input[name="NewsDescription"]').value = description;
                    document.querySelector('input[name="NewsContent"]').value = NewsContent;


                    overlay.style.display = 'flex'; // Show the modal
                });
            });

            document.getElementById('closeModal').addEventListener('click', () => {
                overlay.style.display = 'none';
            });
            overlay.addEventListener('click', e => !modal.contains(e.target) && closeModal());
        });
        //chinh sua form
        document.addEventListener('DOMContentLoaded', () => {
            const updateForm = document.getElementById('UpdateForm');
            const modal = updateForm.querySelector('.modal');

            // Utility function to close the modal
            const closeModal = () => {
                updateForm.style.display = 'none';
                clearFormFields();
            };

            // Event listener for edit buttons
            document.querySelectorAll('.editIcon').forEach(icon => {
                icon.addEventListener('click', function () {
                    const newsDiv = this.closest('[data-id]');
                    if (!newsDiv) {
                        console.error("Không tìm thấy thông tin trường.");
                        return;
                    }

                    // Retrieve school information from DOM
                    const newsId = newsDiv.getAttribute('data-id');
                    const title = newsDiv.querySelector('.news-title')?.textContent.trim() || '';
                    const description = newsDiv.querySelector('.news-description')?.textContent.trim() || '';
                    const NewsContent = newsDiv.querySelector('.news-NewsContent')?.textContent.trim() || '';


                    // Populate form with retrieved data
                    updateForm.querySelector('input[name="IdNews"]').value = newsId;
                    updateForm.querySelector('input[name="TitleNews"]').value = title;
                    updateForm.querySelector('input[name="NewsDescription"]').value = description;
                    updateForm.querySelector('input[name="NewsContent"]').value = NewsContent;


                    // Display the form modal
                    updateForm.style.display = 'flex';
                });
            });

            // Close modal event handlers
            document.getElementById('closeModal').addEventListener('click', closeModal);
            updateForm.addEventListener('click', e => {
                if (!modal.contains(e.target)) {
                    closeModal();
                }
            });
            modal.addEventListener('click', e => {
                e.stopPropagation();
            });

            // Utility to clear form fields
            const clearFormFields = () => {
                updateForm.querySelectorAll('input, input').forEach(field => field.value = '');
            };
        });

        document.addEventListener('DOMContentLoaded', () => {
            const updateForm = document.getElementById('UpdateForm');
            const modal = updateForm.querySelector('.modal');
            const closeModalBtn = document.getElementById('closeModal');

            // Utility function to close the modal
            const closeModal = () => {
                updateForm.style.display = 'none';
                clearFormFields();
            };

            // Event listener for edit buttons
            document.querySelectorAll('.editIcon').forEach(icon => {
                icon.addEventListener('click', function () {
                    const newsDiv = this.closest('[data-id]');
                    const newsId = newsDiv.getAttribute('data-id');
                    const title = newsDiv.querySelector('.news-title').textContent.trim();
                    const description = newsDiv.querySelector('.news-description').textContent.trim();
                    const NewsContent = newsDiv.querySelector('.news-NewsContent').textContent.trim();

                    // Populate the modal fields
                    modal.querySelector('input[name="IdNews"]').value = newsId;
                    modal.querySelector('input[name="TitleNews"]').value = title;
                    modal.querySelector('input[name="NewsDescription"]').value = description;
                    modal.querySelector('input[name="NewsContent"]').value = NewsContent;


                    updateForm.style.display = 'flex'; // Show the modal
                });
            });

            // Close the modal event listener
            closeModalBtn.addEventListener('click', closeModal);

            // Clear form fields after closing
            const clearFormFields = () => {
                modal.querySelector('input[name="IdNews"]').value = '';
                modal.querySelector('input[name="TitleNews"]').value = '';
                modal.querySelector('input[name="NewsDescription"]').value = '';
                modal.querySelector('input[name="NewsContent"]').value = '';
            };
        });

        function confirmDelete(button) {
            const form = button.closest('form');
            const schoolName = button.closest('.news-item').querySelector('.news-title').textContent.trim();

            // Show confirmation dialog
            const confirmAction = confirm(`Bạn có chắc chắn muốn xóa trường "${schoolName}"?`);

            if (confirmAction) {
                // If confirmed, submit the form
                form.submit();
            }
        }

    </script>
</body>

</html>