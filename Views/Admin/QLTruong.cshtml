@{
    Layout = "_AdminLayout"; // Sử dụng layout admin
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Hover Effect</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .active {
            background-color: rgba(255, 255, 255, 0.2);
            transition: background-color 0.3s ease;
            /* Thêm hiệu ứng chuyển màu nền */
        }

        a {
            transition: background-color 0.3s ease;
            /* Thêm hiệu ứng chuyển màu cho tất cả các thẻ a */
            width: 100%;
            /* Đặt chiều rộng cho thẻ a */
        }

        .container.mx-auto.flex.items-center.justify-end.gap-3.p-3 {
            display: none;
        }

        .flex.gap-7.text-lg.font-medium.pr-5.pb-7 {
            display: none;
        }

        .w-36 {
            display: none;
        }

        .flex.items-start.justify-center.gap-20.bg-gray-900 {
            display: none;
        }
    </style>
</head>

<body class=" flex items-center justify-center">

    <div class="flex w-[100%]">
        <!-- Div lớn chứa các icon -->
        <div
            class="group relative flex h-[900px] w-[50px] flex-col items-start bg-green-500 transition-all duration-500 ease-in-out hover:w-[200px]">
            <!-- Danh sách các icon -->
            <a href="/tongquan"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">home</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">Tổng
                    Quan</span>
            </a>

            <a href="/qltintuc"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">announcement</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">QL
                    Tin tức</span>
            </a>
            <a href="/qltruong"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">school</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">QL
                    Trường</span>
            </a>
            <a href="/qltuvan"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">help_outline</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">QL
                    Tư vấn</span>
            </a>

            <a href="/qltaikhoan"
                class="flex items-center relative pl-3 h-[50px] w-[50px] text-white transition-all duration-500 ease-in-out group-hover:w-[200px]">
                <span class="material-icons text-2xl">account_circle</span>
                <span
                    class="ml-2 whitespace-nowrap opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100">QL
                    Tài khoản</span>
            </a>
        </div>

        <!-- thẻ div chứa nội dung -->
        <div class="w-[100%] h-[900px] mx-auto w-[calc(100%-200px)]">
            <h1 class="w-[98%] font-bold text-center text-2xl mt-[2%] text-shadow">Quản lý trường</h1>
            <div class="w-[97.5%] h-[8.5%] mt-[2%] rounded-md border border-black flex items-center">
                <div class=" w-[12%] h-[55%] ml-[1%] rounded-lg shadow-box flex text-center justify-center
                    items-center cursor-pointer" data-country="all" onclick="filterNews('all')">
                    <div>
                        <span class="text-shadow">Tất cả</span>
                    </div>
                </div>
                <div class=" w-[12%] h-[55%] ml-[1%] rounded-lg shadow-box flex text-center justify-center
                    items-center cursor-pointer" data-country="Úc" onclick="filterNews('Úc')">
                    <div>
                        <span class="text-shadow">Trường ở Úc</span>
                    </div>
                </div>
                <div class=" w-[12%] h-[55%] ml-[1%] rounded-lg shadow-box flex text-center justify-center
                    items-center cursor-pointer" data-country="Mỹ" onclick="filterNews('Mỹ')">
                    <div>
                        <span class="text-shadow">Trường ở Mỹ</span>
                    </div>
                </div>

                <div
                    class="w-[5%] mt-[1.5%] mr-2 h-[50%] shadow-box ml-auto mb-[1.5%] rounded-lg bg-green-500 text-center">
                    <div id="addIcon" class="cursor-pointer flex justify-center items-center h-full">
                        <i class="fas fa-plus mt-2"></i>
                    </div>
                </div>
            </div>



            <div class="mx-auto grid grid-cols-2 mt-[1%] gap-4 w-[100%] h-[18%]" id="newsGrid">
                <div data-country="Mỹ">
                    <div class="w-[95%] h-[100%] border border-black flex items-center justify-between p-5">
                        <div class="w-[95%] h-[85%] flex">
                            <img class="w-[50%] h-[100%]" src="~/Images/Albert Einstein.png" alt=""
                                class="w-auto h-[100%] flex items-center justify-center border border-black">
                            <div class="ml-2 h-[100%] w-[100%] text-[14px] flex flex-col justify-between">
                                <h1 class="font-bold">Trường Trung học The Storm King School – New York, Mỹ</h1>
                                <h1 class="font-bold flex">Quốc gia: <p
                                        class="pl-1 font-bold text-blue-700 font-normal">Mỹ</p>
                                </h1>
                                <h1 class="font-bold flex">Tỉnh bang/ Thành phố: <p
                                        class="pl-1 font-bold text-blue-700 font-normal">New York</p>
                                </h1>
                                <h1 class="font-bold flex">Bậc học: <p class="pl-1 font-bold text-blue-700 font-normal">
                                        ĐẠI HỌC</p>
                                </h1>
                                <h1 class="font-bold flex items-center justify-between">
                                    <span class="mr-2">Học phí trung bình: <p
                                            class="inline pl-1 font-bold text-black-700 font-normal">74,100$</p></span>
                                </h1>
                            </div>
                        </div>
                        <div class="flex flex-col items-center">
                            <span class="cursor-pointer editIcon">
                                <i class="fas fa-edit" style="font-size: 20px;"></i> <!-- Icon sửa -->
                            </span>
                            <span class="cursor-pointer deleteIcon mt-2">
                                <i class="fas fa-trash" style="font-size: 20px;"></i> <!-- Icon xoá -->
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Repeat the above structure for the "Đại học James Cook Brisbane" section -->
                <div data-country="Úc">
                    <div class="w-[95%] h-[100%] border border-black flex items-center justify-between p-5">
                        <div class="w-[95%] h-[85%] flex">
                            <img class="w-[50%] h-[100%]" src="~/Images/Albert Einstein.png" alt=""
                                class="w-auto h-[100%] flex items-center justify-center border border-black">
                            <div class="ml-2 h-[100%] w-[100%] text-[14px] flex flex-col justify-between">
                                <h1 class="font-bold">Đại học James Cook Brisbane</h1>
                                <h1 class="font-bold flex">Quốc gia: <p
                                        class="pl-1 font-bold text-blue-700 font-normal">Úc</p>
                                </h1>
                                <h1 class="font-bold flex">Tỉnh bang/ Thành phố: <p
                                        class="pl-1 font-bold text-blue-700 font-normal">Brisbane</p>
                                </h1>
                                <h1 class="font-bold flex">Bậc học: <p class="pl-1 font-bold text-blue-700 font-normal">
                                        ĐẠI HỌC</p>
                                </h1>
                                <h1 class="font-bold flex items-center justify-between">
                                    <span class="mr-2">Học phí trung bình: <p
                                            class="inline pl-1 font-bold text-black-700 font-normal">74,100$</p></span>
                                </h1>
                            </div>
                        </div>
                        <div class="flex flex-col items-center">
                            <span class="cursor-pointer editIcon">
                                <i class="fas fa-edit" style="font-size: 20px;"></i> <!-- Icon sửa -->
                            </span>
                            <span class="cursor-pointer deleteIcon mt-2">
                                <i class="fas fa-trash" style="font-size: 20px;"></i> <!-- Icon xoá -->
                            </span>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Div overlay, ban đầu ẩn -->
            <div class="overlay fixed inset-0 bg-gray-900 bg-opacity-70 flex justify-center items-center hidden"
                id="overlay">
                <div class="modal bg-white p-10 rounded-lg shadow-lg text-center">
                    <div class="w-[95%] h-[100%] border border-black flex items-center justify-center">
                        <div class="w-[95%] h-[85%] flex">
                            <!-- Nơi hiển thị hình ảnh đã tải lên -->
                            <img id="uploadedImage" class="w-[50%] h-[100%]" src="~/Images/Albert Einstein.png"
                                alt="Hình ảnh"
                                class="w-auto h-[100%] flex items-center justify-center border border-black">

                            <div class="ml-[4%] h-[100%] text-[14px] flex flex-col justify-between">
                                <!-- Input để cập nhật thông tin -->
                                <input type="text" id="schoolName" class="border p-2 rounded mb-2 w-full"
                                    placeholder="Tên trường">
                                <input type="text" id="country" class="border p-2 rounded mb-2 w-full"
                                    placeholder="Quốc gia">
                                <input type="text" id="city" class="border p-2 rounded mb-2 w-full"
                                    placeholder="Tỉnh bang/Thành phố">
                                <input type="text" id="educationLevel" class="border p-2 rounded mb-2 w-full"
                                    placeholder="Bậc học">
                                <input type="number" id="tuitionFee" class="border p-2 rounded mb-2 w-full"
                                    placeholder="Học phí trung bình ($)">

                                <!-- Nút chọn hình ảnh -->
                                <input type="file" id="imageInput" class="mt-4" accept="image/*">
                            </div>
                        </div>
                    </div>

                    <!-- Icon Đóng và Lưu -->
                    <div class="flex justify-end mt-2">
                        <!-- Nút Đóng -->
                        <button id="closeModal" class="bg-red-500 text-white px-4 py-2 rounded mr-5 flex items-center">
                            <i class="fas fa-times mr-1"></i> Đóng
                        </button>

                        <!-- Nút Lưu -->
                        <button id="saveButton"
                            class="bg-blue-500 text-white px-4 py-2 mr-[5%] rounded flex items-center">
                            <i class="fas fa-save mr-1"></i> Lưu
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <script>

            document.addEventListener('DOMContentLoaded', () => {
                const overlay = document.getElementById('overlay'),
                    modal = document.querySelector('.modal'),
                    newsDivs = document.querySelectorAll('#newsGrid > div'),
                    closeModal = () => overlay.style.display = 'none';

                document.querySelectorAll('#addIcon, .editIcon').forEach(icon => {
                    icon.addEventListener('click', () => overlay.style.display = 'flex');
                });

                document.getElementById('closeModal').addEventListener('click', closeModal);

                overlay.addEventListener('click', e => !modal.contains(e.target) && closeModal());

                // Hàm filterNews gộp lại
                window.filterNews = country => {
                    var countries = ['all', 'Mỹ', 'Úc'];

                    countries.forEach(c => {
                        var div = document.querySelector(`div[data-country="${c}"]`);
                        if (country === c) {
                            div.classList.add('bg-green-500'); // Thêm màu nền khi nhấn
                            newsDivs.forEach(n => {
                                n.style.display = (country === 'all' || n.getAttribute('data-country') === country) ? 'flex' : 'none';
                            });
                        } else {
                            div.classList.remove('bg-green-500'); // Xóa màu nền khi không nhấn
                        }
                    });
                };
            });
