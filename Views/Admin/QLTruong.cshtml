            document.addEventListener('DOMContentLoaded', () => {
                const overlay = document.getElementById('overlay'),
                    modal = document.querySelector('.modal'),
                    newsDivs = document.querySelectorAll('#newsGrid > div'),
                    closeModal = () => overlay.style.display = 'none';

                document.querySelectorAll('#addIcon, .editIcon').forEach(icon => {
                    icon.addEventListener('click', () => overlay.style.display = 'flex');
                });

                // Event listener for delete buttons
                document.querySelectorAll('.deleteIcon').forEach(icon => {
                    icon.addEventListener('click', function () {
                        const institutionDiv = this.closest('[data-country]');
                        institutionDiv.remove(); // Remove the institution div
                    });
                });

                document.getElementById('closeModal').addEventListener('click', closeModal);

                overlay.addEventListener('click', e => !modal.contains(e.target) && closeModal());

                // Hàm filterNews gộp lại
                window.filterNews = country => {
                    var countries = ['all', 'Mỹ', 'Úc'];

                    countries.forEach(c => {
                        var div = document.querySelector(`div[data-country="${c}"]`);
                        if (country === c) {
                            div.classList.add('bg-green-500'); // Thêm màu nền khi nhấn
                            newsDivs.forEach(n => {
                                n.style.display = (country === 'all' || n.getAttribute('data-country') === country) ? 'flex' : 'none';
                            });
                        } else {
                            div.classList.remove('bg-green-500'); // Xóa màu nền khi không nhấn
                        }
                    });
                };
            });

        </script>
</body>

</html>
