@{
    ViewData["Title"] = "UK Schools Information";
}

<div class="container mx-auto px-4 py-12">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Các trường Đại học hàng đầu tại Anh</h1>

        <div class="grid md:grid-cols-2 gap-8">
            <div class="border border-gray-200 rounded-lg p-6">
                <h2 class="text-xl font-semibold mb-4">University of Oxford</h2>
                <img src="/images/oxford.jpg" alt="Oxford University" class="w-full rounded-lg mb-4">
                <ul class="list-disc list-inside space-y-2 text-gray-700">
                    <li>Xếp hạng: #1 tại Anh</li>
                    <li>Học phí: £26,000 - £37,000/năm</li>
                    <li>Yêu cầu IELTS: 7.0</li>
                </ul>
            </div>

            <div class="border border-gray-200 rounded-lg p-6">
                <h2 class="text-xl font-semibold mb-4">University of Cambridge</h2>
                <img src="/images/cambridge.jpg" alt="Cambridge University" class="w-full rounded-lg mb-4">
                <ul class="list-disc list-inside space-y-2 text-gray-700">
                    <li>Xếp hạng: #2 tại Anh</li>
                    <li>Học phí: £25,000 - £36,000/năm</li>
                    <li>Yêu cầu IELTS: 7.0</li>
                </ul>
            </div>
        </div>
    </div>
</div>
