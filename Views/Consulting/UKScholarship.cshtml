@{
    ViewData["Title"] = "UK Scholarship Information";
}

<div class="container mx-auto px-4 py-12">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Học bổng du học Anh</h1>

        <div class="space-y-6">
            <div class="border-l-4 border-blue-600 pl-4">
                <h2 class="text-xl font-semibold mb-2">Chevening Scholarships</h2>
                <p class="text-gray-600">Học bổng toàn phần từ chính phủ Anh cho sinh viên quốc tế xuất sắc</p>
            </div>

            <div class="border-l-4 border-blue-600 pl-4">
                <h2 class="text-xl font-semibold mb-2">Commonwealth Scholarships</h2>
                <p class="text-gray-600">Dành cho sinh viên từ các nước thành viên Commonwealth</p>
            </div>

            <div class="border-l-4 border-blue-600 pl-4">
                <h2 class="text-xl font-semibold mb-2">GREAT Scholarships</h2>
                <p class="text-gray-600">Học bổng từ các trường đại học hàng đầu tại Anh</p>
            </div>
        </div>

        <div class="mt-8 bg-blue-50 p-6 rounded-lg">
            <h3 class="text-lg font-semibold mb-4">Điều kiện cần có</h3>
            <ul class="list-disc list-inside space-y-2 text-gray-700">
                <li>Thành tích học tập xuất sắc</li>
                <li>IELTS 6.5 trở lên</li>
                <li>Hoạt động ngoại khóa tích cực</li>
                <li>Kinh nghiệm làm việc (với một số học bổng)</li>
            </ul>
        </div>
    </div>
</div>
