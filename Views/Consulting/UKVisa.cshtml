@{
    ViewData["Title"] = "UK Visa Information";
}

<div class="container mx-auto px-4 py-12">
    <div class="bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">Thông tin Visa du học Anh</h1>

        <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-green-50 p-6 rounded-lg">
                <h2 class="text-xl font-semibold mb-4">Yêu cầu hồ sơ</h2>
                <ul class="list-disc list-inside space-y-2 text-gray-700">
                    <li>Hộ chiếu còn hạn ít nhất 6 tháng</li>
                    <li>Thư mời nhập học (CAS)</li>
                    <li>Bằng IELTS</li>
                    <li>Chứng minh tài chính</li>
                    <li>Giấy khám sức khỏe</li>
                </ul>
            </div>

            <div class="bg-green-50 p-6 rounded-lg">
                <h2 class="text-xl font-semibold mb-4">Quy trình xin visa</h2>
                <ol class="list-decimal list-inside space-y-2 text-gray-700">
                    <li>Nộp hồ sơ online</li>
                    <li>Đặt lịch sinh trắc học</li>
                    <li>Nộp hồ sơ tại trung tâm tiếp nhận</li>
                    <li>Chờ kết quả (15-20 ngày)</li>
                </ol>
            </div>
        </div>
    </div>
</div>
